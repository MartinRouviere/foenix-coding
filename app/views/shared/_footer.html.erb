<div class="footer-wrapper">
  <div class="container">
    <div class="footer-foenix">

      <div class="footer-left">
        <div class="footer-section home-section">
          <%= link_to t('navbar.home'), root_path, class: "grey medium-text footer-link" %>
        </div>
        <div class="footer-section">
          <p class="grey medium-text"><%= t('navbar.products') %></p>
          <%= link_to t('navbar.printers'), root_path, class: "light-grey footer-link" %>
          <%= link_to t('navbar.software'), root_path, class: "light-grey footer-link" %>
          <%= link_to t('navbar.inks'), root_path, class: "light-grey footer-link" %>
        </div>
        <div class="footer-section">
          <p class="grey medium-text"><%= t('navbar.services') %></p>
          <%= link_to t('navbar.distributors'), root_path, class: "light-grey footer-link" %>
          <%= link_to t('navbar.cost'), root_path, class: "light-grey footer-link" %>
          <%= link_to t('navbar.faq'), root_path, class: "light-grey footer-link" %>
        </div>
        <div class="footer-section">
          <p class="grey medium-text"><%= t('navbar.company') %></p>
          <%= link_to t('navbar.about'), root_path, class: "light-grey footer-link" %>
          <%= link_to t('navbar.careers'), root_path, class: "light-grey footer-link" %>
          <%= link_to t('navbar.news'), root_path, class: "light-grey footer-link" %>
        </div>
      </div>
      <div class="footer-right">
        <div class="footer-section">
          <% if user_signed_in? %>
            <%= link_to t('navbar.logout'), destroy_user_session_path, method: :delete, class: "grey medium-text footer-link" %>
          <% else %>
            <%= link_to t('navbar.login'), new_user_session_path, class: "grey medium-text footer-link" %>
          <% end %>
        </div>
        <div class="footer-section">
          <%= link_to t("navbar.contact"), root_path, class: 'grey medium-text footer-link' %>
        </div>
        <div class="footer-section">
          <a href="#" role="button" id="productsDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="footer-link grey">
            <%= locale.capitalize %> <i class="fas fa-chevron-down small-chevron"></i>
          </a>
          <div class="dropdown-menu" aria-labelledby="productsDropdown">
            <%= link_to "English", { :locale=>'en' }, class: "dropdown-item" %>
