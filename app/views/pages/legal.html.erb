<% content_for :meta_title, "#{t('seo.legal.title')}" %>
<% content_for :meta_description, "#{t('seo.legal.description')}" %>

<div class="legal-wrapper">
  <div class="dark-bg py-5">
    <div class="max-width" style="overflow-x: unset;">
      <div class="row m-0 justify-content-center">
        <div class="col-12 col-md-11 col-lg-9 pt-5 mb-5">
          <div class="d-flex flex-column justify-content-center align-items-center py-5">
            <%= image_tag 'legal.png', class: 'legal-img mb-4' %>
            <h1 class="text-center text-white mb-4"><%= t("legal.first_section_title") %></h1>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="d-flex justify-content-center align-items-center bg-white">
    <ul class="nav nav-pills" id="pills-tab" role="tablist">
      <li class="nav-item">
        <a class="nav-link active text-center medium no-border-right" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true"><%= t("legal.cookie_policy") %></a>
      </li>
      <li class="nav-item">
        <a class="nav-link text-center medium" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false"><%= t("legal.privacy_policy") %></a>
      </li>
    </ul>
  </div>
  <div class="tab-content p-5" id="pills-tabContent">
    <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
      <div class="max-width py-5" style="overflow-x: unset;">
        <div class="legal-content bg-white shadow p-5">
          <%= render 'cookie_policy' %>
        </div>
      </div>
    </div>
    <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
      <div class="max-width py-5" style="overflow-x: unset;">
        <div class="legal-content bg-white shadow p-5">
          <%= render 'privacy_policy' %>
        </div>
      </div>
    </div>
  </div>


</div>
