<script>
  document.querySelectorAll('.faq-card-head').forEach((trigger) => {
    trigger.addEventListener('click', () => {
      document.getElementById(`faqBody${trigger.id.split('-')[1]}`)
      document.getElementById(`faqBody${trigger.id.split('-')[1]}`).classList.toggle('faq-card-open')
      if (document.getElementById(`faqBody${trigger.id.split('-')[1]}`).classList.contains('faq-card-open')) {
        trigger.lastElementChild.firstElementChild.classList.remove('fa-plus')
        trigger.lastElementChild.firstElementChild.classList.add('fa-minus')
      } else {
        trigger.lastElementChild.firstElementChild.classList.remove('fa-minus')
        trigger.lastElementChild.firstElementChild.classList.add('fa-plus')
      }
    })
  })
</script>
