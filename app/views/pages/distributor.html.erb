<% content_for :meta_title, "#{t('seo.distributors.title')}" %>
<% content_for :meta_description, "#{t('seo.distributors.description')}" %>
<% content_for :meta_keywords, "#{t('seo.distributors.keywords')}" %>

<div class="distributor-wrapper">
  <div class="first-section mobile-column max-width">
      <div class="first-section-text w350 m-0 pl-0">
        <h1 class="w-100"><%= t("distributor.first_section_title") %></h1>
        <p class=""><%= t("distributor.first_section_text") %></p>
      </div>
      <div class="flex-grow-1">
        <%= image_tag 'map-animation.gif', class: 'first-section-image map-gif', alt: 'highlighted cities' %>
      </div>
  </div>
  <div class="max-width px-3 px-md-5 py-5">
    <div class="container-countries">
      <div class="distributor-second-section">
        <h2 class="mb-4"><%= t("distributor.second_section_title") %>:</h2>
        <div class="distributor-countries-container">
          <%#= render 'shared/distributor_countries' %>
          <div class="distributor-countries-web">
            <div class="row" style="margin: 0; position: relative; z-index: 1">
              <% @countries.each do |country| %>
                <div class="country-card" style="width: 20%;">
                  <%= image_tag url_for(country.photo) %>
                  <p class=""><%= country.name %></p>
                </div>
              <% end %>
              <div class="country-card hide-mobile" style="width: 20%;">
                <%= image_tag 'distributor-plus-icon.png' %>
                <p class=""><%= t("distributor_countries.be_the_next") %></p>
              </div>
            </div>
          </div>
          <div class="distributor-countries-mobile">
            <div class="row" style="margin: 0;">
              <% @countries.each do |country| %>
                <div class="country-card" style="width: 33.33%;">
                  <%= image_tag url_for(country.photo), alt: "#{country.name} flag" %>
                  <p class=""><%= country.name %></p>
                </div>
              <% end %>
              <div class="country-card" style="width: 33.33%;">
                <%= image_tag 'distributor-plus-icon.png', alt: 'plus icon' %>
                <p class=""><%= t("distributor_countries.be_the_next") %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="distributor-see-more">
        <div id="see-more" class="secondary-button d-sm-none">
          <p class="mb-0">See more</p>
        </div>
        <div id="see-less" class="secondary-button d-none d-sm-none">
          <p class="mb-0">See less</p>
        </div>
      </div>
    </div>
  </div>

  <div class="dark-bg pt-5">
    <div class="max-width px-3 px-md-5 pt-5">
      <div class="row m-0 justify-content-center">
        <div class="col-12 col-md-6">
          <div class="d-flex flex-column justify-content-center align-items-center">
            <h2 class="text-center text-white mb-0"><%= t("distributor.why_partner_title") %></h2>
            <h2 class="text-center text-white mb-3"><%= t("distributor.why_partner_title_two") %></h2>
            <p class="text-white text-center"><%= t("distributor.why_partner_text_html") %></p>
          </div>
        </div>
      </div>
    </div>

    <div class="max-width py-5 px-3 px-md-5">
      <div class="row m-0 justify-content-center">
        <div class="col-12 col-md-6 col-lg-4 mb-sm-3 mt-sm-3 mb-5 mb-lg-0">
          <div class="charcoal-bg border-radius p-4 h-100 d-flex justify-content-center align-items-center">
            <ul class="mb-0 py-2">
              <li class="text-center text-white mb-4"><%= t("distributor.first_list_one") %></li>
              <li class="text-center text-white mb-4"><%= t("distributor.first_list_two") %></li>
              <li class="text-center text-white mb-4"><%= t("distributor.first_list_three") %></li>
              <li class="text-center text-white mb-4"><%= t("distributor.first_list_four") %></li>
              <li class="text-center text-white mb-0"><%= t("distributor.first_list_five") %></li>
            </ul>

          </div>
        </div>
        <div class="col-12 col-md-6 col-lg-4 mb-sm-3 mt-sm-3 mb-5 mb-lg-0">
          <div class="charcoal-bg border-radius p-4 h-100 d-flex justify-content-center align-items-center">
            <ul class="mb-0 py-2">
              <li class="text-center text-white mb-4"><%= t("distributor.second_list_one") %></li>
              <li class="text-center text-white mb-4"><%= t("distributor.second_list_two") %></li>
              <li class="text-center text-white mb-4"><%= t("distributor.second_list_three") %></li>
              <li class="text-center text-white mb-4"><%= t("distributor.second_list_four") %></li>
              <li class="text-center text-white mb-4"><%= t("distributor.second_list_five") %></li>
              <li class="text-center text-white mb-0"><%= t("distributor.second_list_six") %></li>
            </ul>

          </div>
        </div>
        <div class="col-12 col-md-6 col-lg-4 mb-sm-3 mt-sm-3 mb-5 mb-lg-0">
          <div class="charcoal-bg border-radius p-4 h-100 d-flex justify-content-center align-items-center">
            <ul class="mb-0 py-2">
              <li class="text-center text-white mb-4"><%= t("distributor.third_list_one") %></li>
              <li class="text-center text-white mb-4"><%= t("distributor.third_list_two") %></li>
              <li class="text-center text-white mb-0"><%= t("distributor.third_list_three") %></li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <div class="max-width py-5 px-3 px-md-5">
      <div class="row m-0 justify-content-center py-5">
        <div class="col-12 col-md-6">
          <div class="d-flex flex-column justify-content-center align-items-center">
            <h2 class="text-white text-center mb-3"><%= t("distributor.partnership_title") %></h2>
            <p class="text-white text-center"><%= t("distributor.partnership_text") %></p>
          </div>
        </div>
      </div>
    </div>

    <div class="max-width py-5 px-3 px-md-5">
      <div class="row m-0 justify-content-center pb-5">
        <div class="col-12 col-sm-6 col-lg-4 mb-5 mb-lg-0 pl-lg-0 pr-lg-5">
          <div class="">
            <p class="text-white text-center s-medium-text"><%= t("distributor.step_one") %></p>
            <h2 class="text-white text-center mb-3"><%= t("distributor.step_one_title") %></h2>
            <p class="text-white text-center"><%= t("distributor.step_one_text") %></p>
          </div>
        </div>
        <div class="col-12 col-sm-6 col-lg-4 mb-5 mb-lg-0 px-lg-0">
          <div class="">
            <p class="text-white text-center s-medium-text"><%= t("distributor.step_two") %></p>
            <h2 class="text-white text-center mb-3"><%= t("distributor.step_two_title") %></h2>
            <p class="text-white text-center"><%= t("distributor.step_two_text") %></p>
          </div>
        </div>
        <div class="col-12 col-sm-6 col-lg-4 mb-5 mb-lg-0 pr-lg-0 pl-lg-5">
          <div class="">
            <p class="text-white text-center s-medium-text"><%= t("distributor.step_three") %></p>
            <h2 class="text-white text-center mb-3"><%= t("distributor.step_three_title") %></h2>
            <p class="text-white text-center"><%= t("distributor.step_three_text") %></p>
          </div>
        </div>
        <div class="col-12 py-5">
          <div class="d-flex justify-content-center align-items-center">
            <%= link_to 'Get Started', 'https://docs.google.com/forms/d/1AGOa9K9bNEt4Kam8g3usEivz7i02cxDmqJL6B9plR_g/edit', class: "primary-button", target: "_blank" %>
          </div>
        </div>
      </div>
    </div>
  </div>


</div>



<script>
  container = document.querySelector('.distributor-countries-mobile')
  moreButton = document.getElementById('see-more')
  lessButton = document.getElementById('see-less')

  moreButton.addEventListener('click', () => {
    container.classList.toggle('change-height');
    moreButton.classList.toggle('d-none')
    lessButton.classList.toggle('d-none')
  })
  lessButton.addEventListener('click', () => {
    container.classList.toggle('change-height');
    moreButton.classList.toggle('d-none')
    lessButton.classList.toggle('d-none')
  })
  function enableBtn(){
     document.getElementById("button1").disabled = false;
     document.getElementById("button1").style.opacity = 1
   }
</script>
