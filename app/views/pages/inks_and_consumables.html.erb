<div class="inks-wrapper">
  <div class="first-section fxone-first-section-background">
    <%= cl_image_tag("inks_big_pill_dqob2a.png", :quality=>"auto", class: "inks-big-pill") %>
    <div class="first-section-text">
      <h1 class="w-100"><%= t("inks_and_consumables.first_section_text") %></h1>
    </div>
    <%= cl_image_tag("inks_and_cons_tvzb0g.png", class: "first-section-image", style: "max-width: 700px;") %>
  </div>
  <div class="inks-second-section-wrapper">
    <%= image_tag 'about-dots.png', class: 'inks-dots-mobile show-mobile' %>
    <%= cl_image_tag("inks_little_pill_pahv4x.png", :quality=>"auto", class: "inks-little-pill") %>
    <div class="container">
      <div class="inks-section">
        <div class="inks-first-section-left">
          <div class="inks-card pb-3" style="margin: 0 0 0 auto">
            <%= image_tag 'inks-card-icon-1.png', class: 'about-icon square-card-icon' %>
            <p class="inks-card-header px-3"><%= t("inks_and_consumables.first_card_title") %></p>
            <p class="paragraph-text inks-card-text px-3"><%= t("inks_and_consumables.first_card_text") %></p>
          </div>
        </div>
        <div class="inks-first-section-right">
          <%= image_tag 'about-dots.png', class: 'inks-dots hide-mobile' %>
          <div class="inks-card pb-3" style="margin: 0 auto 0 0">
            <%= image_tag 'inks-card-icon-2.png', class: 'about-icon square-card-icon' %>
            <p class="inks-card-header px-3"><%= t("inks_and_consumables.second_card_title") %></p>
            <p class="paragraph-text inks-card-text px-3"><%= t("inks_and_consumables.second_card_text") %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="inks-third-section-wrapper">
    <%= cl_image_tag("slant-background_xuvpqk.png", :quality=>"auto", class: "inks-slant hide-mobile") %>
    <%= cl_image_tag("mobile-slant_kd8uj1.png", :quality=>"auto", class: "inks-slant show-mobile") %>
    <div class="inks-section mobile-reverse">
      <%= cl_image_tag("inks-pipes_vcplke.png", class: "fxone-first-section-image position-relative inks-third-section-image") %>
      <div class="inks-third-section-right mobile-center">
        <%= image_tag 'inks-icon-1.png', class: 'about-icon' %>
        <h3 class="inks-fifth-section-text mobile-margin-bottom"><%= t("inks_and_consumables.third_section_text") %></h3>
      </div>
    </div>
  </div>
</div>
<%= render 'shared/newsletter' %>
