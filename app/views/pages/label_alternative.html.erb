<script>
  function scrollProblems(direction) {
    const container = document.getElementById('problemsContainer');
    const scrollAmount = 320;
    if (direction === 'left') {
      container.scrollBy({ left: -scrollAmount, behavior: 'smooth' });
    } else {
      container.scrollBy({ left: scrollAmount, behavior: 'smooth' });
    }
  }

  function scrollSolutions(direction) {
    const container = document.getElementById('solutionsContainer');
    const scrollAmount = 320;
    if (direction === 'left') {
      container.scrollBy({ left: -scrollAmount, behavior: 'smooth' });
    } else {
      container.scrollBy({ left: scrollAmount, behavior: 'smooth' });
    }
  }

  function toggleDescriptionBlock() {
    const descBlock1 = document.getElementById('descBlock1');
    const descBlock2 = document.getElementById('descBlock2');
    const descImage1 = document.getElementById('descImage1');
    const descImage2 = document.getElementById('descImage2');
    const handler1 = document.getElementById('descrHandler1');
    const handler2 = document.getElementById('descrHandler2');
    if (descBlock1.style.height === '0px') {
      descBlock1.style.height = '170px';
      descBlock2.style.height = '0px';
      descImage1.classList.remove('d-none');
      descImage2.classList.add('d-none');
      handler1.style.transform = 'rotate(0deg)';
      handler2.style.transform = 'rotate(180deg)';
    } else {
      descBlock1.style.height = '0px';
      descBlock2.style.height = '450px';
      descImage1.classList.add('d-none');
      descImage2.classList.remove('d-none');
      handler1.style.transform = 'rotate(180deg)';
      handler2.style.transform = 'rotate(0deg)';
    }
  }
</script>