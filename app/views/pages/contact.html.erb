<div class="contact">
  <%= cl_image_tag("inks_big_pill_dqob2a.png", class: "contact-pill") %>
  <h1><%= t('contact.contact_title') %></h1>
  <p><%= t("contact.contact_title_description")%></p>
  <div class="contact_details">
    <div class="contact-form">
      <form id="fs-frm" name="simple-contact-form" accept-charset="utf-8" action="https://formspree.io/YOUR_EMAIL_HERE" method="post">
          <input type="text" name="name" id="full-name" placeholder="First and Last" required="">
          <input type="email" name="_replyto" id="email-address" placeholder="Email" required="">
          <input type="email" name="_replyto" id="email-address" placeholder="Phone" required="">
          <input type="email" name="_replyto" id="email-address" placeholder="Company" required="">
          <input type="email" name="_replyto" id="email-address" placeholder="Country" required="">
          <textarea rows="5" name="message" id="message" placeholder="Your Message" required=""></textarea>
          <input type="hidden" name="_subject" id="email-subject" value="Contact Form Submission">
        <input type="submit" value="Submit">
      </form>
    </div>
    <div class="contact-text">
      <div class="contact-text-one">
        <%= image_tag 'chat-icon.png' %>
        <p><%= t("contact.icon_text") %></p>
      </div>
      <div class="contact-text-one">
        <%= image_tag 'grain-icon.png' %>
        <p><%= t("contact.icon_text_two") %></p>
      </div>
    </div>
  </div>
</div>
