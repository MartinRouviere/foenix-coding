<%= simple_form_for([:admin, @post]) do |f| %>
  <%= f.input :title %>
  <p>Text</p>
  <input id="x" type="hidden" name="post[text]" value= "<%= @post.text ? @post.text : '' %>">
  <trix-editor class="trix-content" input="x"></trix-editor>
  <%= f.input :image, as: :file %>
  <%= f.input :featured, as: :boolean %>
  <%= f.input :time %>
  <%= f.submit %>
<% end %>


