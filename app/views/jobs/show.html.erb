          <% end %>
          <% unless @job.expectation10.blank? %>
            <li class="main-body-text small-text"><%= @job.expectation10 %></li>
          <% end %>
        </ul>
        <% if @job.responsibility1 != "" || @job.responsibility2 != "" || @job.responsibility3 != "" || @job.responsibility4 != "" || @job.responsibility5 != "" || @job.responsibility6 != "" || @job.responsibility7 != "" || @job.responsibility8 != "" || @job.responsibility9 != "" || @job.responsibility10 != "" %>
