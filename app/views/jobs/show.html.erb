<div class="jobs-wrapper jobs-show-wrapper">
  <%= cl_image_tag("inks_big_pill_dqob2a.png", class: "jobs-big-pill hide-mobile") %>
  <%= cl_image_tag("inks_little_pill_pahv4x.png", class: "jobs-little-pill hide-mobile") %>
  <div class="jobs-section">
    <div class="job-content">
      <div class="job-content-left hide-mobile">
        <p class="s-medium-text mb-2"><%= t("jobs_show.roles_at") %></p>
        <p class="s-medium-text main-body-text mb-2"><%= @job.location %></p>
        <p class="s-medium-text main-body-text mb-2"><%= @job.job_type %></p>
        <p class="s-medium-text main-body-text mb-2"><%= @job.team %></p>
        <div class="job-social-links">
          <%= link_to "http://www.facebook.com/sharer/sharer.php?u=#{job_url(@job)}&t=#{@job.title}", target: "_blank" do %>
            <i class="fab fa-facebook-square main-body-text mb-2 mr-2"></i>
          <% end %>
          <%= link_to "https://twitter.com/intent/tweet?text=#{@job.title}&url=#{job_url(@job)}", target: "_blank" do %>
            <i class="fab fa-twitter main-body-text mb-2 mr-2"></i>
          <% end %>
          <%= link_to "http://www.linkedin.com/shareArticle?mini=true&url=#{job_url(@job)}&summary=#{@job.text1}=#{root_url}", target: "_blank" do %>
            <i class="fab fa-linkedin main-body-text mb-2 mr-2"></i>
          <% end %>
        </div>
        <a href="mailto:sales@foenixcoding.com" class="btn apply-now-button"><%= t("jobs_show.apply_now") %></a>
      </div>
      <div class="job-content-right">
        <h2 style="letter-spacing: 1px;"><%= @job.title %></h2>
        <div class="job-content-left show-mobile">
          <p class="s-medium-text mb-2"><%= t("jobs_show.roles_at") %></p>
          <p class="s-medium-text main-body-text mb-2"><%= @job.location %></p>
          <p class="s-medium-text main-body-text mb-2">Full time*</p>
          <p class="s-medium-text main-body-text mb-2">New Business*</p>
          <div class="job-social-links">
            <i class="fab fa-facebook-square main-body-text mb-2 mr-2"></i>
            <i class="fab fa-twitter main-body-text mb-2 mr-2"></i>
            <i class="fab fa-linkedin main-body-text mb-2 mr-2"></i>
          </div>
          <%= link_to "#{ t("jobs_show.apply_now" ) }", '#', class: 'btn apply-now-button' %>
        </div>
        <div class="trix-text">
          <%= raw @job.text1 %>
          <%= raw @job.text2 %>
        </div>
        <% if @job.expectation1 != "" || @job.expectation2 != "" || @job.expectation3 != "" || @job.expectation4 != "" || @job.expectation5 != "" || @job.expectation6 != "" || @job.expectation7 != "" || @job.expectation8 != "" || @job.expectation9 != "" || @job.expectation10 != "" %>
          <p class="s-medium-text"><%= t("jobs_show.you_will") %>:</p>
        <% end %>
        <ul style="padding-left: 16px;">
          <% unless @job.expectation1.blank? %>
            <li class="main-body-text small-text"><%= @job.expectation1 %></li>
          <% end %>
          <% unless @job.expectation2.blank? %>
            <li class="main-body-text small-text"><%= @job.expectation2 %></li>
          <% end %>
          <% unless @job.expectation3.blank? %>
