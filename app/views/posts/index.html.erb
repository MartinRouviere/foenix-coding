<% content_for :meta_title, "#{t('seo.posts.title')}" %>
<% content_for :meta_description, "#{t('seo.posts.description')}" %>

<div class="posts">
  <%= cl_image_tag("inks_big_pill_dqob2a.png", :quality=>"auto", class: "news-pill") %>
  <%= cl_image_tag("inks_little_pill_pahv4x.png", :quality=>"auto", class: "news-pill-bottom") %>
  <div class="container">
    <% if @featured %>
      <div class="featured-post">
          <h1>Featured</h1>
          <%= link_to post_path(@featured) do %>
            <div class="featured-post-div">
              <div class="featured-post-div-text">
                <h2><%= @featured.title %></h2>
                <div class="responsive-text">
                  <%= simple_format(@featured.text.truncate(120)) %>
                </div>
              </div>
              <% if @featured.image.present? %>
                  <%= cl_image_tag @featured.image, class: 'featured-post-image' %>
              <% else %>
                <%= image_tag 'https://source.unsplash.com/random', class: 'featured-post-image' %>
              <% end %>
              <%# link_to post_path(@featured), class: "rel-link" %>
            </div>
          <% end %>
      </div>
    <% end %>
    <div class="all-news">
      <h1><%= t("news.news") %></h1>
      <div class="row">
        <% @posts.last(6).each do |post| %>
          <div class="col-12 col-lg-6">
            <%= link_to post_path(post), class: 'no-decoration' do %>
              <div class="new-post-card">
                <div class="new-post-card-content">
                  <h6><%= post.title.truncate(65) %></h6>
                  <div class="new-post-card-text"><%= simple_format(post.text.truncate(100)) %></div>
                  <div class="post-card-text-details">
                    <p class="font-12 grey-text lighter"><%= post.created_at.strftime("%b %y") %></p>
                    <pre class="m-0 grey-text lighter" style="padding-top: 2px;"> • </pre>
                    <p class="font-12 grey-text lighter"><%= post.reading_time %> min read</p>
                  </div>
                </div>
                <% if post.image.present? %>
                  <%= cl_image_tag post.image, class: 'new-post-card-image' %>
                <% else %>
                  <%= image_tag 'https://source.unsplash.com/random', class: 'new-post-card-image' %>
                <% end %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
