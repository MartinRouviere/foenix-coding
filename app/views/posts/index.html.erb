<div class="container">
  <h1>Posts</h1>
  <% @posts.each do |post| %>
    <div class="border">
      <p>Title: <%= post.title %></p>
      <p>Text: <%= raw post.text %></p>
      <p>Image: <%= cl_image_tag post.photo.key, height: 50, width: 50, crop: :fill %></p>
      <p>Read Time: <%= post.time %></p>
      <%= link_to "Edit post", edit_admin_post_path(post) %>
      <%= link_to "Delete post", admin_post_path(post), method: :delete %>
    </div>
  <% end %>
  <%= link_to "Add a new post", new_admin_post_path %>
</div>
